# --- Database (PostgreSQL) ---
# Prisma用
DATABASE_URL="postgresql://admin:password@localhost:5432/marketing_tool?schema=public"
# DuckDBアーカイブ用（lib/duckdb-archive.tsで使用）
DATABASE_HOST="localhost"
DATABASE_USER="admin"
DATABASE_PASSWORD="password"
DATABASE_NAME="marketing_tool"
DATABASE_PORT="5432"

PRISMA_CLIENT_ENGINE_TYPE=binary

# --- Authentication (NextAuth.js) ---
NEXTAUTH_SECRET="your_very_secret_key_here" 
GOOGLE_CLIENT_ID="YOUR_GOOGLE_CLIENT_ID"
GOOGLE_CLIENT_SECRET="YOUR_GOOGLE_CLIENT_SECRET"

# --- Storage (MinIO / S3) ---
# API・バックエンド用
MINIO_ENDPOINT="http://localhost:9000"
MINIO_ACCESS_KEY="minioadmin"
MINIO_SECRET_KEY="miniopassword"

# ポップアップ画像用バケット
MINIO_BUCKET_NAME="popups"
# トラッキングログ用バケット
MINIO_LOG_BUCKET_NAME="tracking-logs"

# --- Frontend Display ---
# 画像を表示する際のベースURL
NEXT_PUBLIC_IMAGE_DOMAIN="http://localhost:9000/popups"

# --- Batch Processing (Archive System) ---
# アーカイブAPIを実行するための合言葉
CRON_SECRET="your_secure_cron_secret_here"
# サーバーが自分自身を呼び出すためのURL
NEXT_PUBLIC_APP_URL="http://localhost:3000"