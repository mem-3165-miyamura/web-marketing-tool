# --- Database (PostgreSQL) ---
# Prisma用
DATABASE_URL="postgresql://admin:password@localhost:5432/marketing_tool?schema=public"
# DuckDBアーカイブ用
DATABASE_HOST="127.0.0.1"
DATABASE_USER="admin"
DATABASE_PASSWORD="password"
DATABASE_NAME="marketing_tool"
DATABASE_PORT="5432"

PRISMA_CLIENT_ENGINE_TYPE=binary

# --- Authentication (NextAuth.js) ---
NEXTAUTH_SECRET="your_very_secret_key_here" 
GOOGLE_CLIENT_ID="YOUR_GOOGLE_CLIENT_ID"
GOOGLE_CLIENT_SECRET="YOUR_GOOGLE_CLIENT_SECRET"

# --- Storage (MinIO / S3) ---
MINIO_ENDPOINT="http://127.0.0.1:9000"
MINIO_ACCESS_KEY="minioadmin"
MINIO_SECRET_KEY="miniopassword"
MINIO_BUCKET_NAME="popups"
MINIO_LOG_BUCKET_NAME="tracking-logs"

# --- Frontend Display ---
NEXT_PUBLIC_IMAGE_DOMAIN="http://127.0.0.1:9000/popups"

# --- Batch Processing (Archive System) ---
CRON_SECRET="your_secure_cron_secret_here"
NEXT_PUBLIC_APP_URL="http://127.0.0.1:3000"

# --- Mail Delivery (MailHog / MA Features) ---
# Node.js環境では localhost より 127.0.0.1 の方が接続が安定します
SMTP_HOST="127.0.0.1"
SMTP_PORT=1025