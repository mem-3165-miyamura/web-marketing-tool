{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".", 
    "paths": {
      "@/*": ["./app/*"],  // appディレクトリ内をエイリアスに設定
      "@lib/*": ["./lib/*"],  // libディレクトリに対するエイリアス
      "@components/*": ["./components/*"],  // componentsディレクトリに対するエイリアス
      "@prisma/client": ["./node_modules/@prisma/client"]  // Prismaのクライアント
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts"
  ],
  "exclude": ["node_modules"]
}
